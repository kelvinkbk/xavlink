# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/xavlink?schema=public"

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:8081

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:5173

# Email Configuration (optional - leave empty for development mode)
EMAIL_PROVIDER=gmail
# EMAIL_PROVIDER=smtp
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# SMTP Configuration (if using SMTP provider)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# Request Logging (set to "true" to enable in production)
LOG_REQUESTS=false
